<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JokeNorrisIO" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <style name="Theme.JokeNorrisIO.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.JokeNorrisIO.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.JokeNorrisIO.Fullscreen" parent="Theme.JokeNorrisIO">
        <item name="android:actionBarStyle">@style/Widget.Theme.JokeNorrisIO.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.JokeNorrisIO.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.JokeNorrisIO.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>